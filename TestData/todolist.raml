#%RAML 1.0
title: ToDo List
version: v1


baseUri: https://{servicename}.api.todolist.com/{version}
baseUriParameters:
  servicename:
    type: string
    description: The name of the service


documentation:
 - title: Home
   content: |
     ToDo List API


mediaType: application/json


annotationTypes:
  primaryKey:
    displayName: Primary Key
    description: This annotation type can be applied to properties
    type: nil
  autoUUID:
    displayName: Auto UUID
    description: This annotation type can be applied to properties
    type: nil


types:
  TodoItem:
    properties:
      id:
        (primaryKey): 
        (autoUUID): 
        required: true
        type: string
      title: string
      createdAt?: datetime
      updatedAt?: datetime
      doneAt?: datetime


/todoItem:
  displayName: ToDo List Items
  get:
    responses:
      200:
        body: TodoItem[]
  post:
    body: TodoItem
    responses:
      201:
        body: TodoItem
  /{id}:
    displayName: Single ToDo List Item
    uriParameters:
     id:
       description: The id of the TodoItem
       type: string
    get:
      responses:
        200:
          body: TodoItem
    patch:
      body: TodoItem
      responses:
        200:
          body: TodoItem
    delete: